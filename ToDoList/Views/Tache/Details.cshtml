@model ToDoList.Models.Tache

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <div class="text-center">
        <h1 class="display-4">Votre tâche</h1>
    </div>

    @if (Model != null)
    {
        <div class="card">
            <div class="card-header">
                Détails
            </div>
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
                <a href="@Url.Action("Index", "Tache")" class="btn btn-primary">Retour à la liste</a>
            </div>
        </div>
    }
    else
    {
        <p>Tâche non trouvé.</p>
    }
</div>
