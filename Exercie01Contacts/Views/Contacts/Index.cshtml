@model List<Exercie01Contacts.Models.Contacts>

<div class="container mt-4">
    <div class="text-center">
        <h1 class="display-4">Affichage de tous les contacts</h1>
        <p>Learn about building Web apps with ASP.NET Core.</p>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in Model)
            {
                <tr>
                    <td>@contact.Id</td>
                    <td>@contact.Name</td>
                    <td>@contact.Email</td>
                    <td>
                        <a href="@Url.Action("Details", "Contacts", new { id = contact.Id })" class="btn btn-primary">Détails</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
