@model List<Exercice02Marmosets.Models.Marmoset>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <div class="text-center">
        <h1 class="display-4">Listes de nos Marmosets</h1>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameForInnerType((Marmoset model) => model.Id)</th>
                <th>@Html.DisplayNameForInnerType((Marmoset model) => model.Name)</th>
                <th>@Html.DisplayNameForInnerType((Marmoset model) => model.Description)</th>
                <th>@Html.DisplayNameForInnerType((Marmoset model) => model.Age)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var marmoset in Model)
            {
                <tr>
                    <td>@marmoset.Id</td>
                    <td>@marmoset.Name</td>
                    <td>@marmoset.Description</td>
                    <td>@marmoset.Age</td>
                    <td>
                        <a asp-action="Details" asp-controller="Marmosets" asp-route-id="@marmoset.Id" class="btn btn-primary">Détails</a>
                        <form method="post" asp-action="Remove" asp-controller="Marmosets" asp-route-id="@marmoset.Id">
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                        </form>
                        </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <a asp-action="Add" asp-controller="Marmosets" class="btn btn-primary">Ajouter un marmoset</a>
    <br />
    <br />
    <form method="post" asp-action="AddRandom" asp-controller="Marmosets">
        <button type="submit" class="btn btn-secondary">Ajouter un Marmoset aléatoire</button>
    </form>

    <br />
</div>
